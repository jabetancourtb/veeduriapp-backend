<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :name ,autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :Cédula_de_ciudadanía %><br />
    <%= f.number_field :cc ,autofocus: true, autocomplete: "cc" %>
  </div>

  <div class="field">
    <%= f.label :Correo_eléctronico %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :Contraseña %>
    <% if @minimum_password_length %>
    <em>(mínimo <%= @minimum_password_length %> caracteres )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :Confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
