<h2><%= name %> Proyecto</h2>

<%= form_for(@project) do |f| %>

  <% @project.errors.full_messages.each do |message| %>
    <div>
      * <%= message %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Título %><br />
    <%= f.text_field :title, placeholder: "Título del proyecto" ,autofocus: true, autocomplete: "title" %>
  </div>

  <div class="field">
    <%= f.label :Nombre_ID %><br />
    <%= f.text_field :name, placeholder: "Nombre identificador del proyecto - ejemplo: 'Ficha EBI Proyecto 1035'" ,autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :Descripción %><br />
    <%= f.text_field :description, placeholder: "Descripción del proyectro - ejemplo: 'La nueva obra de ...'" ,autofocus: true, autocomplete: "description" %>
  </div>

  <div class="field">
    <%= f.label :Información %><br />
    <%= f.text_area :information, placeholder: "Información completa y detallada del proyecto" ,autofocus: true, autocomplete: "information" %>
  </div>

  <div class="field">
    <%= f.label :Url_de_la_foto_o_imagen %><br />
    <%= f.text_field :photo, placeholder: "ejemplo - '/assets/noticia1/'" ,autofocus: true, autocomplete: "photo" %>
  </div>

  <div class="field">
    <%= f.submit "Guardar" %>
  </div>

<% end %>